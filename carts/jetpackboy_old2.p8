pico-8 cartridge // http://www.pico-8.com
version 16
__lua__

score=0

function _init()
	cls()
	lasers={}
	player={
	x=10,
	y=2,
	dy=1,
	draw=function(self)
		spr(16, self.x, self.y)
	end,
	update=function(self)
		if btn(🅾️) then
			self.y -= self.dy
		else
			self.y += self.dy
		end
	
		if btn(❎) then
		--shoot laser
			add(lasers, make_laser(self.x+8,self.y+2))
		--needs cool down time
			sfx(1)
		end
		
		if self.y > 120 then
			self.y = 120
		end
	end
	}

end

function _update()
	player:update()
	for laser in all(lasers) do
		laser:update()
	end	
end

function _draw()
	cls()
	player:draw()
	for laser in all(lasers) do
		laser:draw()
	end
	print(score, 1, 1, 3)
end

function make_laser(x,y)
	--laser that shoots out of player
	local laser={
	x=x,
	y=y,
	dx=3,
	draw=function(self)
		line(self.x, self.y, self.x+3, self.y, 10)
	end,
	update=function(self)
		self.x += self.dx
	end
	}
	return laser
end


